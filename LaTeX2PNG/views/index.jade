    script(src='http://code.jquery.com/jquery-2.1.4.min.js')
    script(src='javascripts/bootstrap.min.js')
    script.
        var getImages = function() {
            

          var img = document.querySelector('#result');
          var data = encodeURIComponent($("#latex").val());
  
          img.src = "http://m2i.work/png?tex=" + data



          $.get("inlinepng", {tex: data}, function(data){ 
                        $('#result2').html('<img src="' + data + '" />'); }
          );
           $.post("inlinepng", {tex: $("#latex").val()}, function(data){
                
          $('#result3').html('<img src="' + data + '" />'); });
        }